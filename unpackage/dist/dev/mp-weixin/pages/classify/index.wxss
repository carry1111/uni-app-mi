.container {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  height: 1120rpx;
  border-right: 1rpx solid #ccc;
}
.left ._li {
    width: 170rpx;
    height: 92rpx;
    line-height: 92rpx;
    text-align: center;
    font-size: 26rpx;
}
.left .selected {
    color: #fb7d34;
    font-size: 34rpx;
}
.right {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
      -ms-flex: 5;
          flex: 5;
  height: 1120rpx;
}
.right .title {
    height: 70rpx;
    line-height: 70rpx;
    margin: 20rpx 0;
    text-align: center;
    position: relative;
    font-size: 28rpx;
}
.right .title::before, .right .title::after {
      content: '';
      position: absolute;
      top: 50%;
      width: 30rpx;
      height: 2rpx;
      background-color: rgba(0, 0, 0, 0.3);
}
.right .title::before {
      left: 30%;
}
.right .title::after {
      right: 30%;
}
.right .list1 {
    font-size: 26rpx;
}
.right .list1 ._li {
      display: inline-block;
      width: 33.2%;
      font-size: 20rpx;
      text-align: center;
      margin-bottom: 36rpx;
}
.right .list1 ._li .image {
        margin-bottom: 15rpx;
}
.right .image {
    width: 100rpx;
    height: 100rpx;
}

